{
    "env": {
        "es2021": true,
        "node": true
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".ts"]
          }
        }
      },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-console": "off",
        "import/extensions": "off"
    }
}
